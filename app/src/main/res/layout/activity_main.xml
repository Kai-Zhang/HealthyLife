<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/noiseTitle"
        android:id="@+id/noiseTitle"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sleepTitle"
        android:id="@+id/sleepTitle"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/noiseTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/addictionTitle"
        android:id="@+id/addictionTitle"
        android:layout_below="@+id/sleepTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sportTitle"
        android:id="@+id/sportTitle"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emotionTitle"
        android:id="@+id/emotionTitle"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/sportTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissionBtn"
        android:id="@+id/permissonBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/addictionTitle"
        android:layout_alignEnd="@+id/addictionTitle"
        android:layout_marginBottom="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingBtn"
        android:id="@+id/settingBtn"
        android:layout_alignTop="@+id/permissonBtn"
        android:layout_toRightOf="@+id/addictionIndex"
        android:layout_toEndOf="@+id/addictionIndex"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/noiseIndex"
        android:layout_alignTop="@+id/noiseTitle"
        android:layout_toRightOf="@+id/noiseTitle"
        android:layout_toEndOf="@+id/noiseTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sleepIndex"
        android:layout_alignTop="@+id/sleepTitle"
        android:layout_toRightOf="@+id/sleepTitle"
        android:layout_toEndOf="@+id/sleepTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/addictionIndex"
        android:layout_alignTop="@+id/addictionTitle"
        android:layout_toRightOf="@+id/addictionTitle"
        android:layout_toEndOf="@+id/addictionTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sportIndex"
        android:layout_alignTop="@+id/sportTitle"
        android:layout_toRightOf="@+id/sportTitle"
        android:layout_toEndOf="@+id/sportTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/emotionIndex"
        android:layout_alignTop="@+id/emotionTitle"
        android:layout_toRightOf="@+id/emotionTitle"
        android:layout_toEndOf="@+id/emotionTitle" />

</RelativeLayout>
